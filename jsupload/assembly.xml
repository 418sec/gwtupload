<assembly>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>/</baseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/${project.build.finalName}/jsupload</directory>
      <outputDirectory>/jsupload</outputDirectory>
      <excludes>
        <exclude>**/GWTC*css</exclude>
        <exclude>**/*cache.png</exclude>
        <exclude>**/Upload.css</exclude>
        <exclude>**/JsUpload.wiki.txt</exclude>
        <exclude>**/jsupload.cgi.pl</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/${project.build.finalName}/jsupload</directory>
      <outputDirectory>/jsupload</outputDirectory>
      <includes>
        <include>**/GWTC-compressed.css</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/${project.build.finalName}/jsupload</directory>
      <outputDirectory>/jsupload/cgi-bin</outputDirectory>
      <includes>
        <include>**/jsupload.cgi.pl</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
